<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vroom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/main_green</item>
        <item name="colorOnPrimary">@color/brown_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_green</item>
        <item name="colorSecondaryVariant">@color/main_green</item>
        <item name="colorOnSecondary">@color/brown_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_green</item>
    </style>
    <style name="CustomPopupTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
    </style>
    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>
</resources>