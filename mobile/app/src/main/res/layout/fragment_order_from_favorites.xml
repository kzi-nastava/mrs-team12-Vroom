<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F6F8F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/title_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order from favorites"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- ERROR MESSAGE -->
        <TextView
            android:id="@+id/error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFE5E9"
            android:textColor="#9B1C2B"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <!-- LOADING STATE -->
        <TextView
            android:id="@+id/loading_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading favorite routes..."
            android:textSize="16sp"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone"/>

        <!-- RECYCLER VIEW FOR FAVORITE ROUTES LIST -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>