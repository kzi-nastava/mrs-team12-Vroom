<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ride Statistics"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="20dp"/>

        <!-- Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <!-- From Date -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From:"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="5dp"/>

                <EditText
                    android:id="@+id/input_from_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="YYYY-MM-DD"
                    android:inputType="date"
                    android:padding="10dp"
                    android:background="@drawable/bg_txt_input_rounded"
                    android:layout_marginBottom="15dp"/>

                <!-- To Date -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To:"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="5dp"/>

                <EditText
                    android:id="@+id/input_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="YYYY-MM-DD"
                    android:inputType="date"
                    android:padding="10dp"
                    android:background="@drawable/bg_txt_input_rounded"
                    android:layout_marginBottom="15dp"/>

                <!-- ADMIN ONLY SECTION -->
                <LinearLayout
                    android:id="@+id/admin_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- User ID -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User ID:"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/input_user_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter user ID"
                        android:inputType="number"
                        android:padding="10dp"
                        android:background="@drawable/bg_txt_input_rounded"
                        android:layout_marginBottom="15dp"/>

                    <!-- Driver ID -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Driver ID:"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/input_driver_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter driver ID"
                        android:inputType="number"
                        android:padding="10dp"
                        android:background="@drawable/bg_txt_input_rounded"
                        android:layout_marginBottom="15dp"/>

                    <!-- Admin Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:id="@+id/btn_fetch_all_users"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="All Users"
                            android:textSize="12sp"
                            android:backgroundTint="#2196F3"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btn_fetch_all_drivers"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="All Drivers"
                            android:textSize="12sp"
                            android:backgroundTint="#2196F3"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fetch Report Button -->
                <Button
                    android:id="@+id/btn_fetch_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetch Report"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:padding="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Report Section -->
        <LinearLayout
            android:id="@+id/report_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Report Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="15dp"/>

            <!-- Summary Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/tv_total_rides"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Rides: 0"
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/tv_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Money: $0.00"
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/tv_total_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Distance: 0 km"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average per Day"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_avg_rides"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Rides / Day: 0"
                        android:textSize="14sp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/tv_avg_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Money / Day: $0.00"
                        android:textSize="14sp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/tv_avg_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Distance / Day: 0 km"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Daily Table Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Breakdown"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_daily_stats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Charts Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charts"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"/>

            <!-- Rides Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rides per Day"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_rides"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Money Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Money per Day"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Distance Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance per Day (km)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_distance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>