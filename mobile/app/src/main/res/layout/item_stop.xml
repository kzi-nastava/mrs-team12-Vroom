<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"> <TextView
    android:id="@+id/label_stop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Stop 1"
    android:textSize="18sp"
    android:textColor="#2d3e2d"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/input_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/label_stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/input_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Street &amp; Number"
            android:padding="18dp"
            android:textSize="18sp"
            android:background="@drawable/bg_txt_input_rounded"
            android:backgroundTint="@color/main_green"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_remove_stop"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Ã—"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_btn_remove_item" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggestions_stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/bg_suggestion_list_stop"
        app:layout_constraintTop_toBottomOf="@+id/input_row"
        app:layout_constraintStart_toStartOf="@+id/input_row"
        app:layout_constraintEnd_toEndOf="@+id/input_row" />

</androidx.constraintlayout.widget.ConstraintLayout>