<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="@color/lime_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.ForgotPasswordActivity"
        android:paddingBottom="100dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans_bold"
            android:text="@string/forgot_password_title"
            android:textColor="#000000"
            android:textSize="36sp"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans_regular"
            android:text="@string/email_input_title"
            android:textColor="#000000"
            android:textSize="36sp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:background="@drawable/bg_txt_input_rounded"
            android:backgroundTint="@color/main_green"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="12dp"
            android:hint="@string/email_example_label"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ibm_plex_sans_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailLabel" />

        <TextView
            android:id="@+id/codeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans_regular"
            android:text="@string/code_input_title"
            android:textColor="#000000"
            android:textSize="36sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailInput" />

        <EditText
            android:id="@+id/codeInput"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:background="@drawable/bg_txt_input_rounded"
            android:backgroundTint="@color/main_green"
            android:drawableStart="@drawable/ic_code"
            android:drawablePadding="12dp"
            android:inputType="text"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ibm_plex_sans_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/codeLabel" />

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans_regular"
            android:text="@string/password_input_title"
            android:textColor="#000000"
            android:textSize="36sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/codeInput" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:background="@drawable/bg_txt_input_rounded"
            android:backgroundTint="@color/main_green"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="12dp"
            android:inputType="textPassword"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ibm_plex_sans_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordLabel" />

        <TextView
            android:id="@+id/confirmPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password_input_title"
            android:fontFamily="@font/ibm_plex_sans_regular"
            android:textColor="#000000"
            android:textSize="36sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordInput" />

        <EditText
            android:id="@+id/confirmPasswordInput"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:background="@drawable/bg_txt_input_rounded"
            android:backgroundTint="@color/main_green"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="12dp"
            android:inputType="textPassword"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ibm_plex_sans_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirmPasswordLabel" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/accent_green"
            android:fontFamily="@font/ibm_plex_sans_bold"
            android:text="@string/submit_btn_title"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirmPasswordInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>