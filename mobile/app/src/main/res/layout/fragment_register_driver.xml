<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="#dceed3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/registerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register New Driver"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First name *"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter first name"
                    android:inputType="textPersonName"
                    android:background="#ffffff"
                    android:padding="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last name *"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter last name"
                    android:inputType="textPersonName"
                    android:background="#ffffff"
                    android:padding="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email *"
            android:textStyle="bold"
            android:paddingTop="8dp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email@example.com"
            android:inputType="textEmailAddress"
            android:background="#ffffff"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number *"
            android:textStyle="bold"
            android:paddingTop="12dp"/>
        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+381 ** *** ****"
            android:inputType="phone"
            android:background="#ffffff"
            android:padding="12dp"/>

        <!-- Gender -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender *"
            android:textStyle="bold"
            android:paddingTop="12dp"/>

        <RadioGroup
            android:id="@+id/genderGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:layout_marginStart="16dp"/>

            <RadioButton
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:layout_marginStart="16dp"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country *"
            android:textStyle="bold"
            android:paddingTop="8dp"/>
        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country"
            android:background="#ffffff"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City *"
            android:textStyle="bold"
            android:paddingTop="12dp"/>
        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:background="#ffffff"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street *"
            android:textStyle="bold"
            android:paddingTop="12dp"/>
        <EditText
            android:id="@+id/street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Street"
            android:background="#ffffff"
            android:padding="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#99c2a2"
            android:layout_marginVertical="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Information (Optional)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note: If you fill any vehicle field, all vehicle fields become required"
            android:textSize="12sp"
            android:textColor="#666666"
            android:paddingBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle brand"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/vehicleBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. Toyota"
            android:background="#ffffff"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle model"
            android:textStyle="bold"
            android:paddingTop="12dp"/>
        <EditText
            android:id="@+id/vehicleModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. Corolla"
            android:background="#ffffff"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle type"
            android:textStyle="bold"
            android:paddingTop="12dp"/>
        <Spinner
            android:id="@+id/vehicleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plate number"
            android:textStyle="bold"
            android:paddingTop="12dp"/>
        <EditText
            android:id="@+id/plateNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. BG-123-AB"
            android:background="#ffffff"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of seats"
            android:textStyle="bold"
            android:paddingTop="12dp"/>
        <EditText
            android:id="@+id/numberOfSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. 4"
            android:inputType="number"
            android:background="#ffffff"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Preferences"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"/>

        <CheckBox
            android:id="@+id/petsAllowed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pets Allowed"/>

        <CheckBox
            android:id="@+id/babiesAllowed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Babies Allowed"/>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Driver"
            android:backgroundTint="#4CAF50"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>