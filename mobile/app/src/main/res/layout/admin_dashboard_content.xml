<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#dceed3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Panel"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- 1. Manage Users -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardManageUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:backgroundTint="#99c2a2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Users"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="24dp"/>
        </androidx.cardview.widget.CardView>

        <!-- 2. Active Rides -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardActiveRides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:backgroundTint="#99c2a2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active Rides"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="24dp"/>
        </androidx.cardview.widget.CardView>

        <!-- 3. Past Rides -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPastRides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:backgroundTint="#99c2a2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Past Rides"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="24dp"/>
        </androidx.cardview.widget.CardView>

        <!-- 4. Panic -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPanic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:backgroundTint="#99c2a2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panic"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="24dp"/>
        </androidx.cardview.widget.CardView>

        <!-- 5. Add Driver -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:backgroundTint="#99c2a2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Driver"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="24dp"/>
        </androidx.cardview.widget.CardView>

        <!-- 6. Profile Requests -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfileRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:backgroundTint="#99c2a2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Requests"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="24dp"/>
        </androidx.cardview.widget.CardView>

        <!-- 7. Pricelist -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPricelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:backgroundTint="#99c2a2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pricelist"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="24dp"/>
        </androidx.cardview.widget.CardView>

        <!-- 8. Chat -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:backgroundTint="#99c2a2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="24dp"/>
        </androidx.cardview.widget.CardView>

        <!-- 9. Reports -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:backgroundTint="#99c2a2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="24dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>