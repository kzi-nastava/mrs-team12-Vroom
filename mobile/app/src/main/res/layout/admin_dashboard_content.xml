<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrator Dashboard"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:textColor="#2A2C24"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:useDefaultMargins="true">

            <!-- Cards -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardActiveRides"
                style="@style/AdminCardStyle">
                <include layout="@layout/admin_card_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPastRides"
                style="@style/AdminCardStyle">
                <include layout="@layout/admin_card_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPanic"
                style="@style/AdminCardStyle">
                <include layout="@layout/admin_card_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddDriver"
                style="@style/AdminCardStyle">
                <include layout="@layout/admin_card_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardManageUsers"
                style="@style/AdminCardStyle">
                <include layout="@layout/admin_card_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfileRequests"
                style="@style/AdminCardStyle">
                <include layout="@layout/admin_card_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPricelist"
                style="@style/AdminCardStyle">
                <include layout="@layout/admin_card_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardChat"
                style="@style/AdminCardStyle">
                <include layout="@layout/admin_card_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardReports"
                style="@style/AdminCardStyle">
                <include layout="@layout/admin_card_content"/>
            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>
</ScrollView>